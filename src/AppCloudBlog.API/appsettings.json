{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=AppCloudBlogDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "JwtSettings": {
    "Secret": "YOUR_SUPER_SECRET_KEY_MUST_BE_LONG_ENOUGH_AT_LEAST_32_CHARS", // IMPORTANT: Change this to a strong, unique key
    "Issuer": "AppCloudBlogIssuer",
    "Audience": "AppCloudBlogAudience",
    "TokenExpirationMinutes": 15, // Short-lived access token
    "RefreshTokenExpirationDays": 7, // Longer-lived refresh token
    "FrontendResetPasswordUrl": "http://localhost:3000/reset-password" // Replace with your actual frontend URL
  },
  "EmailSettings": {
    "ApiKey": "YOUR_EMAIL_SERVICE_API_KEY", // e.g., MailerSend, SendGrid
    "FromName": "AppCloudBlog",
    "FromEmail": "noreply@appcloudblog.com"
  }
}